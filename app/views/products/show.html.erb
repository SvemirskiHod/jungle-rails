<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>

        <% if current_user %>
          <div>
            <%= form_for [@product, @review] do |f| %>
            <%= f.text_area :description %>
            <%= f.select :rating, [1,2,3,4,5] %>
            <%= f.submit %>
            <% end %>
          </div>
        <% end %>

        <div class="dl-horizontal">
        <% @product.reviews.sort { |b,a| a["created_at"] <=> b["created_at"] }.each do
          |review| %>

            <div class="product_review">
              <dt>
                <%= review.user["first_name"]%> <%= review.user["last_name"] %>
              </dt>
              <dt>Rated - <%= review.rating %></dt>
              <dt>
                <% if current_user && (current_user.id == review.user.id) %>
                  <%= link_to product_review_remove_review_path(review_id: review.id, product_id: @product.id), class: 'btn btn-xs btn-danger', method: :delete do %>
                    Delete Review
                  <% end %>
                <% end %>
              </dt>
              <dd><%= review.description %></dd>
              <br>
            </div>
          <% end %>
        </div>

      </div>
    </div>

  </article>

</section>
